#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

function changed {
  git diff --name-only HEAD@{1} HEAD | grep "^$1" > /dev/null 2>&1
}

CHANGED=0

if changed 'package.json'; then
  echo "ğŸ“¦ package.json å·²å˜æ›´,ç¨åä¼šè‡ªåŠ¨æ‰§è¡Œ pnpm install"
  CHANGED=1
fi

if changed 'pnpm-lock.yaml'; then
  echo "ğŸ“¦ pnpm-lock.yaml å·²å˜æ›´,ç¨åä¼šè‡ªåŠ¨æ‰§è¡Œ pnpm install"
  CHANGED=1
fi

if changed '.env.development'; then
  echo "ğŸ“¦ .env.development å·²å˜æ›´,ç¨åä¼šè‡ªåŠ¨æ‰§è¡Œ pnpm install"
  CHANGED=1
fi

if changed '.env.mock'; then
  echo "ğŸ“¦ .env.mock å·²å˜æ›´,ç¨åä¼šè‡ªåŠ¨æ‰§è¡Œ pnpm install"
  CHANGED=1
fi

if changed '.env.preview'; then
  echo "ğŸ“¦ .env.preview å·²å˜æ›´,ç¨åä¼šè‡ªåŠ¨æ‰§è¡Œ pnpm install"
  CHANGED=1
fi

if changed '.env.production'; then
  echo "ğŸ“¦ .env.production å·²å˜æ›´,ç¨åä¼šè‡ªåŠ¨æ‰§è¡Œ pnpm install"
  CHANGED=1
fi

if [ "$CHANGED" = 1 ]; then
    pnpm install
fi
